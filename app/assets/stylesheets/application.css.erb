.clear {
  clear: both;
}

.hidden {
  display: none;
}

header,
footer {
  height: 120px;
  background-color: #F1F4F8;
  box-shadow: 0px 2px 10px #444
}

header #logo {
  float: left;
  margin: 35px 0px 0px 230px;
}

header #logo h1 {
  float: left;
  font-size: 19pt;
  margin: 33px 0px 0px 0px;
  color: #3C3D3D;
  font-weight: 500;
}

header #logo_mark {
  float: left;
}

#content_wrapper {
  position: relative;
  padding: 120px 0px 50px 0px;
  background-image: url(<%= asset_path 'home_background.png' %>) ;
}

#content {
  z-index: 2;
  position: relative;
}

#content_wrapper::before {
  position: absolute;
  content: "";
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  background-image: linear-gradient(to bottom, #07175F, rgb(0, 117, 255));
  opacity: 0.7;
  z-index: 0;
}

#contact {
  float: right;
  margin: 45px 90px 0px;
}

#contact img {
  float: left;
}

#contact span {
  color: #0075FF;
  font-size: 13pt;
  margin: 8px 0px 0px 10px;
  float: left;
  font-weight: 500;
}

#content {
  width: 74%;
  margin: 0px auto;
  padding-left: 100px;
}

#about {
  width: 49%;
  float: left;
  line-height: 20px;
}

#about #learn_more {
  background-color: #0075FF;
  color: white;
  display: inline-block;
  font-size: 11pt;
  padding: 8px 40px;
  margin-top: 20px;
  cursor: pointer;
}

#about #learn_more_content {
  border-radius: 3px;
  margin-top: 20px;
  color: #2C7CD9;
}

#about #learn_more_content .header {
  background-color: #FDFDFD;
  padding: 25px 28px;
  border-radius: 5px;
  font-size: 18pt;
}

#about #learn_more_content .content {
  background-color: #F4F4F4;
  border-top: 1px solid #ccc;
  padding: 20px;
  font-size: 11pt;
  line-height: 23px;
  margin-top: -5px;
}

#about #learn_more_content .content ul {
  margin: 0px;
}

#about h2 {
  color: #FDFDFD;
  font-size: 27pt;
  font-weight: 500;
  line-height: 45px;
  margin: 5px 0px 5px;
}

#about p {
  color: #FDFDFD;
  font-size: 11pt;
  font-weight: 200;
  margin-top: 0px;
}

#contact_form {
  float: right;
  width: 42%;
  border-top: 4px solid #0075FF;
}

#contact_form .header {
  background-color: #FDFDFD;
  padding: 20px 48px;
}

#contact_form h3 {
  color: #006EFF;
  font-size: 20pt;
  font-weight: 500;
  margin: 0px;
}

#contact_form p {
  color: #6C6C6C;
  margin: 3px 0px;
  font-size: 10pt;
}

#contact_form form {
  background-color: #F4F4F4;
  padding: 20px 0px;
}

#contact_form input,
#contact_form textarea {
  display: block;
  padding: 10px 15px;
  border-radius: 3px;
  border: 0px;
  box-shadow: inset 1px 1px 1px #ddd;
  margin: 5px auto;
  width: 69%;
  font-size: 0.9em;
}

#contact_form textarea {
  min-height: 100px;
}

#contact_form input[type="submit"] {
  box-shadow: none;
  width: 76%;
  margin: 10px auto;
  background-color: #0075FF;
  color: #fdfdfd;
  padding: 13px;
}

footer {
  height: 100px;
  padding-top: 20px;
  color: #0075FF;
  text-align: center;
}